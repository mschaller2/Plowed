<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_dark"
    android:orientation="vertical">

    <TextView
        android:id="@+id/client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/montserrat"
        android:text="@string/welcome_client"
        android:textColor="@android:color/white"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat"
        android:hint="Manually Set Address"
        android:inputType="textPostalAddress" />

    <Button
        android:id="@+id/toMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="5dp"
        android:onClick="goToMap"
        android:backgroundTint="#85bfd4"
        android:textColor="@android:color/white"
        android:fontFamily="@font/montserrat"
        android:text="Select Address on Map" />

    <Button
        android:id="@+id/confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:onClick="goToRequestService"
        android:backgroundTint="#85bfd4"
        android:fontFamily="@font/montserrat"
        android:text="Request Plowing Service" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <Button
            android:id="@+id/check_Weather"
            android:layout_width="221dp"
            android:layout_height="wrap_content"
            android:onClick="updateWeather"
            android:textColor="@android:color/white"
            android:fontFamily="@font/montserrat"
            android:backgroundTint="#85bfd4"
            android:text="Check Weather" />

        <EditText
            android:id="@+id/zipCodeIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:fontFamily="@font/montserrat"
            android:textColor="@android:color/white"
            android:hint="Zip Code"
            android:inputType="textPersonName" />
    </LinearLayout>

    <TextView
        android:id="@+id/current_weather"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Enter Zip Code To Update Weather"
        android:fontFamily="@font/montserrat"
        android:textColor="@android:color/white"
        android:textSize="27dp" />

    <TextView
        android:id="@+id/temperature"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/montserrat"
        android:textSize="27dp" />

    <TextView
        android:id="@+id/feels_like"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/montserrat"
        android:textSize="27dp" />

    <Button
        android:id="@+id/goToDriver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat"
        android:onClick="goToDriver"
        android:layout_gravity="center"
        android:text="Driver Test Button" />

</LinearLayout>